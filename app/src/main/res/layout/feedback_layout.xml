<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_weight="2"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#f4f4f5">

        <RelativeLayout
            android:id="@+id/feedback_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/feeback_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:text="date "
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="User Email: "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@id/feeback_date_tv" />

            <TextView
                android:id="@+id/user_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/feeback_date_tv"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/email_tv"
                android:text="email"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Feedback: "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@id/user_email_tv"/>

            <TextView
                android:id="@+id/feedback_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:text="feedback detail"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_below="@id/user_email_tv"
                android:layout_toRightOf="@id/feedback" />



